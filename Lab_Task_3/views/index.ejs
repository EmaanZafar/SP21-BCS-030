<section id="welcome" class="hero text-center py-5">
<div class="container">
  <h1 class="display-4">Welcome to Cafe Book Nook</h1>
  <p class="lead">A Place Where Coffee Meets Adventure</p>
  <a href="#menu" class="btn btn-primary btn-lg">Explore Menu</a>
</div>
</section>

<section class="about text-center py-5">
<div class="container">
  <div class="circle-container">
    <div class="circle-content">
      <h2>About Us</h2>
      <p>Welcome to Cafe Book Nook, where every cup of coffee comes with a side of adventure. Dive into our world of books, brews, and beyond. Explore new stories and flavors with us!</p>
    </div>
  </div>
</div>
</section>


<!-- Menu Section -->
<section id="menu" class="menu text-center py-5">
<div class="container">
    <h2>Our Menu</h2>
    <!-- Add your menu items here -->
    <div class="row">
        <div class="col-md-4">
            <div class="circular-card">
                <div class="circular-image">
                    <img src="<%= '/images/cappucino.jpg' %>" class="card-img-top" alt="Coffee 1">
                </div>
                <div class="card-body">
                    <h5 class="card-title">Cappuccino</h5>
                    <p class="card-text">A classic espresso drink with steamed milk and foam.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="circular-card">
                <div class="circular-image">
                    <img src="<%= '/images/latte.jpg' %>" class="card-img-top" alt="Coffee 2">
                </div>
                <div class="card-body">
                    <h5 class="card-title">Latte</h5>
                    <p class="card-text">Espresso and steamed milk, topped with a small amount of foam.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="circular-card">
                <div class="circular-image">
                    <img src="<%= '/images/espresso.webp' %>" class="card-img-top" alt="Coffee 3">
                </div>
                <div class="card-body">
                    <h5 class="card-title">Espresso</h5>
                    <p class="card-text">A concentrated coffee brewed by forcing a small amount of nearly boiling water through finely-ground beans.</p>
                </div>
            </div>
        </div>
    </div>
</div>
</section>


<!-- Events Section -->
<section id="events" class="events text-center py-5" style="background-image: url('events-background.jpg');">
<div class="container">
    <h2>Upcoming Events</h2>
    <!-- Add your events here -->
    <div class="row">
        <div class="col-md-4">
            <div class="circular-card">
                <div class="circular-image">
                    <img src="<%= '/images/book club.jpg' %>" class="img-fluid" alt="Event 1">
                </div>
                <div class="card-body">
                    <h5 class="card-title">Book Club Meeting</h5>
                    <p class="card-text">Join us for a discussion on the latest bestseller!</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="circular-card">
                <div class="circular-image">
                    <img src="<%= '/images/live music.jpg' %>" class="img-fluid" alt="Event 2">
                </div>
                <div class="card-body">
                    <h5 class="card-title">Live Music Night</h5>
                    <p class="card-text">Enjoy live music with your favorite coffee.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="circular-card">
                <div class="circular-image">
                    <img src="<%= '/images/trivia.jpg' %>" class="img-fluid" alt="Event 3">
                </div>
                <div class="card-body">
                    <h5 class="card-title">Trivia Quiz</h5>
                    <p class="card-text">Test your knowledge and win exciting prizes!</p>
                </div>
            </div>
        </div>
    </div>
</div>
</section>



<!-- Contact Section -->
<section id="contact" class="contact text-center py-5" style="background-image: url('contact-background.jpg');">
<div class="container">
  <h2>Contact Us</h2>
  <p>We'd love to hear from you! Reach out for any inquiries or just to say hi.</p>
  <a href="mailto:info@cafebooknook.com" class="btn btn-primary btn-lg mt-3">Email Us</a>
</div>
</section>